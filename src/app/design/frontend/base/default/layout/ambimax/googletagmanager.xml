<?xml version="1.0"?>
<layout>
    <default>
        <reference name="after_body_start">
            <block type="ambimax_googletagmanager/dataLayer" name="ambimax_googletagmanager.data_layer" template="ambimax/googletagmanager/iframe.phtml"/>
        </reference>
    </default>


    <!-- product page -->
    <catalog_product_view>
        <reference name="ambimax_googletagmanager.data_layer">
            <block type="ambimax_googletagmanager/dataLayer_product" name="ambimax_googletagmanager.data_layer.product" as="ambimax_gtm_product"/>
        </reference>
    </catalog_product_view>

    <!-- category page (non-anchor) -->
    <catalog_category_default>
        <reference name="ambimax_googletagmanager.data_layer">
            <block type="ambimax_googletagmanager/dataLayer_category" name="ambimax_googletagmanager.data_layer.category" as="ambimax_gtm_category"/>
        </reference>
    </catalog_category_default>

    <!-- category page (anchor) -->
    <catalog_category_layered>
        <reference name="ambimax_googletagmanager.data_layer">
            <block type="ambimax_googletagmanager/dataLayer_category" name="ambimax_googletagmanager.data_layer.category" as="ambimax_gtm_category"/>
        </reference>
    </catalog_category_layered>

    <!-- order success page (multishipping) -->
    <checkout_multishipping_success>
        <reference name="ambimax_googletagmanager.data_layer">
            <block type="ambimax_googletagmanager/dataLayer_order_success" name="ambimax_googletagmanager.data_layer.order_success" as="ambimax_gtm_order_success"/>
        </reference>
    </checkout_multishipping_success>

    <!-- order success page (one step checkout) -->
    <checkout_onepage_success>
        <reference name="ambimax_googletagmanager.data_layer">
            <block type="ambimax_googletagmanager/dataLayer_order_success" name="ambimax_googletagmanager.data_layer.order_success" as="ambimax_gtm_order_success"/>
        </reference>
    </checkout_onepage_success>
</layout>